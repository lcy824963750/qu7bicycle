<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.rightsallocate.model.Organization" table="organization">
		<id name="oid" type="java.lang.String">
			<column name="oid" length="36" />
			<generator class="uuid" />
		</id>
		<property name="name" type="java.lang.String">
			<column name="name" length="100" />
		</property>
		<property name="des" type="java.lang.String">
			<column name="des" length="100" />
		</property>
		<property name="phone" type="java.lang.String">
			<column name="phone" length="11" />
		</property>
		<set name="childOrganizations" inverse="true">
          <key>
          	<column name="parentid"></column>
          </key>
          <one-to-many class="com.rightsallocate.model.Organization"/>
        </set>
        <many-to-one name="parentOrganization" column="parentid">
             
        </many-to-one>
        <set name="userList" inverse="true" >
          <key>
          	<column name="oid"></column>
          </key>
          <one-to-many class="com.rightsallocate.model.User"/>
        </set>
        
	</class>

</hibernate-mapping>
